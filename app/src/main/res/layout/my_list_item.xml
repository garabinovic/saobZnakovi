<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/jedan25"
        android:layout_margin="5dp"
        android:id="@+id/imgTemp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I-25"
        android:layout_marginLeft="40dp"
        android:id="@+id/sifraZnaka"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#cb000000"
        android:layout_toRightOf="@+id/imgTemp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/imgTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorPrimary"
        android:text=">"
        android:id="@+id/strelica"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/sifraZnaka"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>